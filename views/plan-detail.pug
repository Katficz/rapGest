extends layout

block content
  div(class="col mx-md-5")
    h1 #{title}
    p #[strong Status: ]
      if masterplan.isDone
        span.text-success  Zakończone
      else
        span.text-danger  Oczekujące

    p #[strong Tytuł:] #{masterplan.name}
    p #[strong Utworzone:] #{masterplan.date.toLocaleString()}
    p #[strong Opis:] #{masterplan.desc}
    p #[strong Zaplanował:] #{masterplan.user.fullname}

    h3 Plany:


    a.btn.btn-primary.my-5.mr-2(href=masterplan.url + '/delete') Usuń 

    a.btn.btn-primary.my-5.mr-2(href=masterplan.url+'/update') Zmodyfikuj 


