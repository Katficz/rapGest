extends layout

block content
    div(class="col mx-md-5 my-5")
        h1.text-center.mb-5= title

        a.btn.btn-primary.my-2(href="/api/typy-urzadzen/dodaj") Utwórz Typ Urządzenia
        table.table.table-bordered.table-striped.table-hover.dark-header-hover
            thead.table-dark
                tr
                    th(width='30%') Nazwa
                    th Opis
            tbody
                each devicetype in list
                    tr
                        td.padding0
                            a.black-link(href=devicetype.url) #{devicetype.name==null ? '' : devicetype.name}
                        td.padding0
                            a.black-link(href=devicetype.url) #{devicetype.description==null ? '' : devicetype.description}
                else
                    li Nie znaleziono żadnych typów urządzeń.




        if errors
            ul
                for error in errors
                    li!= error.msg

    script.
        const activateLink = document.querySelector('#deviceTypeListActive')
        activateLink.className+=" active"
        const activateSubMenu = document.querySelector('#deviceSubMenu')
        activateSubMenu.className+=" active"
