extends layout

block content
   
   div(class="col mx-md-5 text-body")
      h1.text-center.my-5 Lista prac planowanych

      a.btn.btn-primary.my-2(href="/api/masterplan/create") Utwórz nową pracę planowaną
      a.btn.btn-primary.my-2.ml-2(href="/api/masterplan/calendar") Kalendarz prac
      table.table.table-bordered.table-striped.table-hover.dark-header-hover
         thead.table-dark
            tr
               th(scope='col') Tytuł
               th(scope='col') Data utworzenia
               th(scope='col') Wielkość
               th(scope='col') Status
         tbody
            each masterplan in masterplan_list
               tr
                  td.padding0
                     a.black-link(href=masterplan.url) #{masterplan.name}
                  td.padding0
                     a.black-link(href=masterplan.url) #{masterplan.date.toLocaleString()}
                  td.padding0 
                     a.black-link(href=masterplan.url) #{masterplan.plans.length}
                  td.padding0 
                     if masterplan.status===1
                        a.blue-link(href=masterplan.url) Nierozpoczęte
                     if masterplan.status===2
                        a.yellow-link(href=masterplan.url) W Trakcie Realizacji
                     if masterplan.status===3
                        a.green-link(href=masterplan.url) Zakończone
